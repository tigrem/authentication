datasource db {
  provider = "postgresql"
  // NOTE: The 'url' property MUST be removed for Prisma 7 compatibility.
}

generator client {
  provider = "prisma-client-js"
  // Keep the necessary binary targets for Docker/Linux environments
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl", "rhel-openssl-3.0.x"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
