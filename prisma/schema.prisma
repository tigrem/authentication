datasource db {
  provider = "postgresql"
  // This line must remain commented out for Prisma v7 configuration
  //url       = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
  // CRITICAL FIX: Add exhaustive binary targets for Docker/Linux environments
  // This forces Prisma to download and bundle the correct native query engine file.
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl", "rhel-openssl-3.0.x"] 
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
